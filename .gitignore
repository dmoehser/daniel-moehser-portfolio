# ===========================
# WordPress .gitignore
# Based on GitHub official template
# ===========================

# WordPress Core Files
# ---------------------
/wp-admin/
/wp-includes/
/wp-*.php
/xmlrpc.php
/readme.html
/license.txt

# WordPress Configuration & Sensitive Files
# ------------------------------------------
wp-config.php
wp-config-local.php
wp-config-staging.php
wp-config-production.php
.htaccess
.htpasswd

# Database & Backups
# ------------------
*.sql
*.sql.gz
*.sql.bz2
*.tar.gz
wp-content/backup*/
wp-content/backups/
wp-content/upgrade/
wp-content/ai1wm-backups/

# WordPress Runtime & Cache
# --------------------------
wp-content/uploads/
wp-content/cache/
wp-content/debug.log
wp-content/error_log
wp-content/w3tc-config/
wp-content/advanced-cache.php
wp-content/object-cache.php

# WordPress Plugins (Third-party)
# --------------------------------
wp-content/plugins/
!wp-content/plugins/index.php
# Uncomment to include custom plugins:
# !wp-content/plugins/your-custom-plugin/

# WordPress Themes (Third-party)
# -------------------------------
wp-content/themes/twenty*/
# Keep only your custom theme:
!wp-content/themes/moehser-portfolio/

# WordPress Languages (Auto-generated)
# ------------------------------------
wp-content/languages/plugins/
wp-content/languages/themes/
# Keep core languages:
!wp-content/languages/admin-*.po
!wp-content/languages/admin-*.mo
!wp-content/languages/continents-cities-*.po
!wp-content/languages/continents-cities-*.mo

# Node.js / NPM / Vite
# --------------------
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*
wp-content/themes/moehser-portfolio/assets/dist/
wp-content/themes/moehser-portfolio/.vite/
wp-content/themes/moehser-portfolio/package-lock.json

# Environment Files
# -----------------
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Operating System Files
# -----------------------
# macOS
.DS_Store
.AppleDouble
.LSOverride
Icon
._*
.DocumentRevisions-V100
.fseventsd
.Spotlight-V100
.TemporaryItems
.Trashes
.VolumeIcon.icns
.com.apple.timemachine.donotpresent

# Windows
Thumbs.db
Thumbs.db:encryptable
ehthumbs.db
ehthumbs_vista.db
*.stackdump
[Dd]esktop.ini
$RECYCLE.BIN/
*.cab
*.msi
*.msix
*.msm
*.msp
*.lnk

# Linux
*~
.fuse_hidden*
.directory
.Trash-*
.nfs*

# IDE & Editor Files
# ------------------
# VSCode
.vscode/
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json

# PhpStorm/IntelliJ
.idea/
*.swp
*.swo
*~

# Sublime Text
*.sublime-project
*.sublime-workspace

# Vim
[._]*.s[a-v][a-z]
[._]*.sw[a-p]
[._]s[a-rt-v][a-z]
[._]ss[a-gi-z]
[._]sw[a-p]

# Logs & Error Files
# ------------------
*.log
error_log
access_log
debug.log
wp-errors.log

# Temporary & Build Files
# -----------------------
*.tmp
*.temp
*.cache
.sass-cache/
.parcel-cache/
dist/
build/

# Security & Maintenance
# -----------------------
# WP-CLI
wp-cli.local.yml
wp-cli.yml

# Composer (if used)
/vendor/
composer.lock

# Git specific
.git/
.gitattributes

# Misc
# ----
sitemap.xml
sitemap.xml.gz
robots.txt


